<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>${groupId}</groupId>
	<artifactId>${artifactId}</artifactId>
	<version>${version}</version>
	<name>${artifactId}</name>
	<packaging>war</packaging>
	
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.10</version>
		</dependency>		
	</dependencies>
	
	<build>
		<directory>do_not_checkin/target</directory>
		<sourceDirectory>${phresco.source.directory}</sourceDirectory>	
		<finalName>service</finalName>
		<plugins>
			<plugin>
				<groupId>com.photon.phresco.plugins</groupId>
				<artifactId>java-maven-plugin</artifactId>
				<version>1.2.1.1000-SNAPSHOT</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>tomcat-maven-plugin</artifactId>
                <version>1.1</version>
                <configuration>
                    <port>${server.port}</port>
                    <username>${server.username}</username>
                    <password>${server.password}</password>
                    <url>http://${server.host}:${server.port}/manager/html</url>
                    <path>/${project.build.finalName}</path>
                    <argLine>-Xmx512m</argLine>
					<warFile>${project.basedir}/do_not_checkin/build/temp/${project.build.finalName}.war</warFile>
                </configuration>
            </plugin>
			<plugin>
				<groupId>org.codehaus.cargo</groupId>
				<artifactId>cargo-maven2-plugin</artifactId>
                <version>1.2.3</version>
				<configuration>
					<container>
						<containerId>${container.id}</containerId>
						<type>remote</type>
					</container>
					<configuration>
						<type>runtime</type>
						<properties>
							<cargo.protocol>${server.protocol}</cargo.protocol>
							<cargo.hostname>${server.host}</cargo.hostname>
							<cargo.servlet.port>${server.port}</cargo.servlet.port>
							<cargo.remote.username>${server.username}</cargo.remote.username>
							<cargo.remote.password>${server.password}</cargo.remote.password>
							<cargo.jvmargs>-Xmx512m</cargo.jvmargs>
						</properties>
					</configuration>
					<deployables>
						<deployable>
							<location>${project.basedir}/do_not_checkin/build/temp/${server.context}.war</location>
							<type>war</type>
						</deployable>
                   </deployables>
				</configuration>
		
			</plugin>
			<plugin>
                <groupId>net.alchim31.maven</groupId>
                <artifactId>yuicompressor-maven-plugin</artifactId>
                <version>1.3.0</version>
                <executions>
                    <execution>
                        <id>yuicompressor-default</id>
                        <goals>
                            <goal>compress</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
		</plugins>
	</build>
	
	<reporting>
		<plugins>	
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-report-plugin</artifactId>
				<version>2.8</version>				
				<configuration>
					<skipTests>true</skipTests>
				</configuration>				
			</plugin>
		</plugins>
	</reporting>
	<profiles>
        <profile>
            <id>ci</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
		        <plugins>
					<plugin>
						<artifactId>maven-clean-plugin</artifactId>
						<version>2.5</version>
						<executions>
						  <execution>
							<id>default-clean</id>
							<phase>pre-clean</phase>
							<goals>
							  <goal>clean</goal>
							</goals>
						  </execution>
						</executions>
						<configuration>
						  <filesets>
							<fileset>
							  <directory>do_not_checkin/build</directory>
							  <includes>
								<include>**/*</include>
							  </includes>
							  <followSymlinks>false</followSymlinks>
							</fileset>
						  </filesets>
						</configuration>
					  </plugin>
		        </plugins>
            </build>
        </profile>
		
		<profile> 
			<id>web</id> 
			<properties>
			<sonar.language>web</sonar.language>
			<sonar.branch>web</sonar.branch>	 
			<sonar.dynamicAnalysis>false</sonar.dynamicAnalysis>
			<sonar.web.sourceDirectory>src/main/webapp</sonar.web.sourceDirectory>
			</properties> 
		</profile>
		
		<profile>
			<id>js</id> 
			<properties>
			<sonar.language>js</sonar.language>
			<sonar.branch>js</sonar.branch>
			<phresco.source.directory>src/main/webapp/</phresco.source.directory>
			<sonar.exclusions>**/lib/**</sonar.exclusions>
			</properties>	
		</profile>
		
		<profile>
			<id>java</id> 
				<activation>
					<activeByDefault>true</activeByDefault>
				</activation>
			<properties>
			<sonar.language>java</sonar.language>
			<sonar.branch>java</sonar.branch>
			<phresco.source.directory>src/main/java</phresco.source.directory>
			</properties>
		</profile>
		
    </profiles>

</project>
